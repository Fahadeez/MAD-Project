<?xml version="1.0" encoding="utf-8"?>
<!--hold recycleview data-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    >

    <!--    row 1-->
    <LinearLayout
        android:id="@+id/sub_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/data1"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp"
            >

            <ImageView
                android:id="@+id/ssd_image"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:contentDescription="ssd"
                android:src="@drawable/evo256gb_microsdxc" />

            <TextView
                android:id="@+id/ssd_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Samsung Evo"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/ssd_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Samsung Evo ssd 256 micro sdxc"
                android:textColor="#000"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/ssd_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="5000 Rs"
                android:textColor="#000"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/data2"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp"
            >

            <ImageView
                android:id="@+id/ssd_image1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:contentDescription="ssd"
                android:src="@drawable/evo256gb_microsdxc" />

            <TextView
                android:id="@+id/ssd_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Samsung Evo SSD"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/ssd_desc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Samsung Evo ssd 256 micro sdxc"
                android:textColor="#000"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/ssd_price1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="5000 Rs"
                android:textColor="#000"
                android:textSize="12sp"
                />

        </LinearLayout>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
